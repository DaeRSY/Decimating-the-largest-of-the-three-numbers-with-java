package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        // write your code here.
        Scanner scanner = new Scanner(System.in);

        int a,b,c;

        System.out.println("Enter the first number:");
        a = scanner.nextInt();
        
        System.out.println("Enter the second number:");
        b = scanner.nextInt();

        System.out.println("Enter the third number");
        c = scanner.nextInt();
        
        if (a>=b && a>=c){
            System.out.println("The largest of the three numbers = "+ a);
        }
        else if (b>=a && b>=c){
            System.out.println("The largest of the three numbers = "+ b);
        }
        else {
            System.out.println("The largest of the three numbers = "+ c);
        }
    }
}
